<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Me</title>
    <style>
        body {
            background-color: #f4f6f9;
            font-family: "Segoe UI", sans-serif;
        }

        .section-title {
            font-weight: 700;
            margin-bottom: 20px;
            color: #212529;
            border-left: 5px solid lightcoral;
            padding-left: 10px;
        }

        .card-custom {
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            border: none;
            transition: transform 0.3s ease;
        }

        .card-custom:hover {
            transform: translateY(-5px);
        }

        .skill-badge {
            display: inline-block;
            background-color: lightcoral;
            color: #fff;
            padding: 8px 16px;
            margin: 6px;
            border-radius: 25px;
            font-size: 14px;
        }

        .project-links a {
            text-decoration: none;
            padding: 10px 18px;
            border-radius: 25px;
            font-weight: 500;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('navbar.ejs') %>

        <div class="container mt-5 mb-5">

            <!-- Skills -->
            <h2 class="section-title">Skills</h2>
            <div class="mb-4">
                <% skills.forEach(skill=> { %>
                    <span class="skill-badge">
                        <%= skill %>
                    </span>
                    <% }) %>
            </div>

            <!-- Education -->
            <h2 class="section-title">Education</h2>
            <div class="row mb-4">
                <% education.forEach(item=> { %>
                    <div class="col-md-6 mb-3">
                        <div class="card card-custom p-4">
                            <h5 class="mb-2">
                                <%= item.level %> Degree
                            </h5>
                            <p><strong>Degree:</strong>
                                <%= item.degree %>
                            </p>
                            <p><strong>University:</strong>
                                <%= item.university %>
                            </p>
                            <p><strong>CGPA:</strong>
                                <%= item.cgpa %>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <!-- Project -->
            <h2 class="section-title">Project</h2>
            <div class="card card-custom p-4">
                <h5>
                    <%= project.projectName %>
                </h5>
                <p class="text-muted">
                    <%= project.projectDetails %>
                </p>

                <div class="project-links mt-3">
                    <a href="<%= project.githubLink %>" target="_blank" class="btn btn-dark me-2">
                        GitHub Repo
                    </a>

                    <a href="<%= project.liveLink %>" target="_blank" class="btn btn-success">
                        Live Demo
                    </a>
                </div>
            </div>

        </div>

</body>

</html>